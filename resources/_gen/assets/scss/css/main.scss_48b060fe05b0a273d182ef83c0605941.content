r{position:absolute;bottom:0;height:100px;height:var(--footer-height);width:100%;border-top:1px solid #4a4a4f}footer .container,footer .main-nav .nav__inner,.main-nav footer .nav__inner{height:100%;display:flex;align-items:center}footer a{color:#ededf0}footer a:after{display:none}footer a:hover,footer a:focus{color:#b1b1b3}footer a svg{fill:currentColor}